{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.org/schemas/sub_schema",
    "title": "Repository metadata",
    "description": "Repository-specific schema",
    "type": "object",
    "properties": {
        "authors": {"$ref": "/schemas/authors.json"}
    },
    "definitions": {
        "authors": {
            "title": "manuscript authors",
            "type": "array",
            "items": {
                "title": "Author",
                "type": "object",
                "properties": {
                  "author": {
                    "title": "name",
                    "type": "string"
                  },
                  "orcid": {
                    "title": "ORCiD",
                    "type": "string"
                  }
                },
                "required": [ "author" ]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    }
}